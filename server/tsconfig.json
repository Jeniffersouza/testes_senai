{
    "compilerOptions": {
        "target": "es6",
        "module": "commonjs",
        "moduleResolution": "node",
        "esModuleInterop": true,
        "strict": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "baseUrl": "./",
        "outDir": "./dist",
        "rootDir": "./src",
        "typeRoots": ["./node_modules/@types", "src/types"],
        "paths": {
            "@/*": ["src/*"],
        },
        "types": ["node", "jest"]
    },
    "include": ["src/**/*", "src/tests"],
    "exclude": ["node_modules", "dist"],
    "files":["./src/types/types.d.ts"]
}
